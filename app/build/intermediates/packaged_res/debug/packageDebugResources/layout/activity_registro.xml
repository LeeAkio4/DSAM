<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1919"
    tools:context=".activity_registro">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="323dp"
        android:layout_height="108dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/placa_de_auto_con_palabra_registro" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="352dp"
        android:layout_height="463dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombres Completos"
                android:textColor="#E9E9E9" />

            <EditText
                android:id="@+id/txtNombrecompleto"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="10sp"
                android:height="60sp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="text"
                android:labelFor="@id/txtdireccion"
                android:textColorHint="#BABABA" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:textColor="#E9E9E9" />

            <EditText
                android:id="@+id/txtdireccion"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="10sp"
                android:height="60sp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Direccion"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#BABABA" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nro. Dni"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="125dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genero"
                    android:textColor="#E9E9E9" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/txtDni"
                    android:layout_width="163dp"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Dni"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="#BABABA" />

                <Space
                    android:layout_width="13dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/txtgenero"
                    android:layout_width="167dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10sp"
                    android:height="60sp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:hint="Genero"
                    android:inputType="text"
                    android:maxLength="9"
                    android:textColor="@color/black"
                    android:textColorHint="#BABABA" />
            </TableRow>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo"
                android:textColor="#E9E9E9" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="10sp"
                android:height="60sp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="#BABABA" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textColor="#E9E9E9" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/logTxtclave"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="#FFFFFF"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar contraseña"
                android:textColor="#E9E9E9" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtConfirmarClave"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FFFFFF"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHighlight="#D9D9D9" />

            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnregistrarse"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:backgroundTint="#808080"
        android:onClick="insertar"
        android:text="Registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.633" />

    <Button
        android:id="@+id/LogBtnRetroceder"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:backgroundTint="#808080"
        android:onClick="Regresar"
        android:text="Atras"
        android:textColorLink="#BFBFBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.633" />

    <CheckBox
        android:id="@+id/chbCondiciones"
        android:layout_width="234dp"
        android:layout_height="34dp"
        android:layout_weight="1"
        android:text="Acepto Terminos y Condiciones"
        android:textColor="#DEDEDE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863" />

</androidx.constraintlayout.widget.ConstraintLayout>