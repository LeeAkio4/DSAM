<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Título "Código Entrada" -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Entrada: "
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/idEntrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:text="Código Entrada"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <!-- Código Producto -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewIdProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Producto: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Código Producto"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </TableRow>

    <!-- Cantidad y Costo Unitario -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Cantidad"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal" />

    </TableRow>

    <!-- Total Entrada -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTotalEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalEntrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Total Entrada"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal" />
    </TableRow>

    <!-- Fecha Entrada -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFechaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fechaEntrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Fecha Entrada"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal" />
    </TableRow>

</LinearLayout>
