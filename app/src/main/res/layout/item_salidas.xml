<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Título "Código Salida" -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCodigoSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Salida: "
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/codigoSalida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:text="Código Salida"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <!-- Código Usuario y Producto -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCodigoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Usuario: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codigoUsuario"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Código Usuario"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCodigoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Producto: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codigoProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Código Producto"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </TableRow>

    <!-- Precio Unitario, Nombre, Cantidad, Placa -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPrecioUnitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Unitario: " />

        <TextView
            android:id="@+id/preciounit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Precio Unit"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: " />

        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: " />

        <TextView
            android:id="@+id/cantidadSalida"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cantidad"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa: " />

        <TextView
            android:id="@+id/placaProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Placa"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </TableRow>

    <!-- Total Salida -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTotalSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: " />

        <TextView
            android:id="@+id/totalSalida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Total"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </TableRow>

    <!-- Fecha Entrada -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFechaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha : " />

        <TextView
            android:id="@+id/fechaEntrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:text="Fecha Entrada"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal" />
    </TableRow>

</LinearLayout>
